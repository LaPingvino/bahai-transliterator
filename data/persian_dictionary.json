    "before_vowel": "-yi",
    "after_silent_h": "-'i",
    "examples": {
      "بحر عطا": "baḥr-i 'aṭā",
      "کنیز خود": "kanīz-i khud",
      "اسم کریم": "ism-i karīm",
      "پروردگار من": "Parvardigār-i man"
    }
  },
